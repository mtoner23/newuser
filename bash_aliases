#Obvious
alias resource="source ~/.bashrc"
alias vim='nvim'

# Navigation
alias cd..="cd .."
alias ..="cd .."
alias ...="cd ../.."
alias ll='ls -lah'
alias cdg='cd ~/git'

#Git
alias gs='git status'
alias gdom='git diff @{upstream}'
alias gdh='git diff HEAD'
alias pull='git pull --rebase'
alias push='git push'
alias gri='git rebase -i'
alias gcf='git commit --fixup HEAD --autosquash'


#Advanced
alias cat='bat'



